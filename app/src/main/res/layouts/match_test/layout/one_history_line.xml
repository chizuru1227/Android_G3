<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="19">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="14"
    android:orientation="horizontal"
    android:weightSum="19"
    android:id="@+id/oneLineRanking">

    <ImageView
        android:id="@+id/rankingImg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:gravity="center"
        app:srcCompat="@drawable/ranking_1" />

    <LinearLayout
        android:id="@+id/rankTxt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15.8"
        android:background="@drawable/ranking_shape"
        android:orientation="horizontal"
        android:weightSum="10.5">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8" />

        <TextView
            android:id="@+id/seikaiTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:autoSizeTextType="uniform"
            android:gravity="center_horizontal"
            android:minHeight="62dp"
            android:text="〇"
            android:textColor="#ff0000"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="50sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/seikaiId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:autoSizeTextType="uniform"
            android:gravity="center_horizontal"
            android:minHeight="62dp"
            android:text="00"
            android:textColor="#663300"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="50sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />


        <TextView
            android:id="@+id/hazureTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:autoSizeTextType="uniform"
            android:gravity="center_horizontal"
            android:minHeight="62dp"
            android:text="✖"
            android:textColor="#0000ff"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="40sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/hazureId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:autoSizeTextType="uniform"
            android:gravity="center_horizontal"
            android:minHeight="62dp"
            android:text="00"
            android:textColor="#663300"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="50sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

    </LinearLayout>
</LinearLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="5"/>
</LinearLayout>





